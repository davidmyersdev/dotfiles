[alias]
  c = !zsh -v -c 'git commit $@' '$@'
  co = !zsh -v -c 'git checkout $@' '$@'
  # Checkout the main branch.
  com = !zsh -v -c 'git checkout $(git main) $@' '$@'
  # Checkout a pull request by its number into a new branch called `pr/<number>`.
  copr = !zsh -v -c 'git fetch origin pull/$1/head:pr/$1 && git checkout pr/$1' '$@'
  d = !zsh -v -c 'git diff $@' '$@'
  dh = !zsh -v -c 'git diff HEAD $@' '$@'
  dn = !zsh -v -c 'git diff --name-only $@' '$@'
  # Show all changed files compared to origin/main.
  dno = !zsh -v -c 'git diff --name-only origin/$(git main) $@' '$@'
  do = !zsh -v -c 'git diff origin/$(git main) $@' '$@'
  # TBD: Looks like it lists all changed files along with the commits they were changed in? I don't remember...
  dnwc = "!f() { for file in `git diff $1 ${2:-HEAD} --name-only`; do echo \"$(git rev-list --abbrev-commit $1..${2:-HEAD} -- \"$file\") $file\"; done }; f"
  # Fetch latest changes from origin.
  f = !zsh -v -c 'git fetch --all --prune $@' '$@'
  # Force-push without erasing unrecognized changes on origin.
  fwl = !zsh -v -c 'git push --force-with-lease $@' '$@'
  # Get the name of the main branch on origin.
  main = "!f() { git rev-parse --abbrev-ref origin/HEAD | xargs -L 1 basename; }; f"
  # Interactively rebase the given commit into the current branch.
  rbi = "!f() { git f; git rebase -i $1; }; f"
  # Interactively rebase the main branch into the current branch.
  rbim = "!f() { git rbi origin/$(git main); }; f"
  # Rebase the main branch into the current branch.
  rbm = "!f() { git f; git rebase origin/$(git main); }; f"
  rhh = reset --hard HEAD
  rsh = reset --soft HEAD
  up = push -u origin HEAD
[commit]
  gpgsign = true
[core]
  editor = vim
  pager = diffr --colors added:none:foreground:0,0xdd,0 --colors refine-added:none:foreground:0,0xdd,0:background:0x10,0x30,0x10 --colors removed:none:foreground:0xdd,0,0 --colors refine-removed:none:foreground:0xdd,0,0:background:0x30,0x10,0x10 | less -R
[gpg]
  program = gpg
[pull]
  rebase = true
[tag]
  gpgsign = true
[user]
  signingkey = 39172BB67E6A96CC
  email = davidrmyersii@gmail.com
  name = David R. Myers
[filter "lfs"]
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
[init]
  defaultBranch = main
[interactive]
  diffFilter = diffr --colors added:none:foreground:0,0xdd,0 --colors refine-added:none:foreground:0,0xdd,0:background:0x10,0x30,0x10 --colors removed:none:foreground:0xdd,0,0 --colors refine-removed:none:foreground:0xdd,0,0:background:0x30,0x10,0x10
